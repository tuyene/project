
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model Category
<div class="ms-2 mx-2">
    <h1 style="margin-top: 50px; text-align: center">Edit</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="Category" asp-action="Edit" asp-route-id="@Model.IdCategory" method="post" class="mt-3" style="width: 60%;
        margin: 0 auto; padding-top: 30px">
        <input type="hidden" asp-for="IdCategory" />
        <div style="margin-top:10px" class="form-group row">
            <label asp-for="IdCategory" class="col-sm-2 col-form-label"></label> <div class="col-sm-10">
                <input asp-for="IdCategory" class="form-control" placeholder="Id">
            </div>
            <span asp-validation-for="IdCategory" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label> <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name">
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <div class="col-sm-10" style="padding: 20px 0">
                <button type="submit" class="btn btn-primary" style="padding: 10px 40px">Edit</button>
            </div>
        </div>
    </form>
</div> 