
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login py-120" style="background-image: url(/images_icon/menu/background/bg.jpeg)">
    <div class="container">
        <div class="col-lg-8 mx-auto reservation-wrapper">
            <div class="row">
                <div class="text-login text-center">
                    <h2 class="text-title">Sign in or create an account</h2>
                </div>
                <div class="col-lg-12 mx-auto">
                    <form action="" id="login-form">
                        <div class="col">
                            <div class="reservation-content">
                                <div class="mx-auto col-lg-9">
                                    <div class="form-group">
                                        <input type="text" name="user" class="form-control"
                                               placeholder="Username or email address">
                                        <div class="error-message" id="user-error"></div>
                                    </div>
                                </div>
                                <div class="mx-auto col-lg-9">
                                    <div class="form-group">
                                        <input type="password" name="password" class="form-control"
                                               placeholder="Password">
                                        <div class="error-message" id="password-error"></div>
                                    </div>
                                </div>
                                <div class="mx-auto col-lg-9">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="cat1">
                                        <label class="form-check-label" for="cat1"> Keep me signed in.</label>
                                    </div>
                                </div>
                                <div class="mx-auto col-lg-9">
                                    <a href="" class="login_user">Forgot your username?</a>
                                </div>
                                <div class="mx-auto col-lg-9">
                                    <a href="" class="login_user">Forgot your password?</a>
                                </div>
                                <div class="mx-auto login-btn">
                                    <a href="#" class="logintheme-btn" id="submit-button">Sign in</a>
                                </div>
                                <div class="success-message" id="success-message" style="display: none">
                                    Đăng nhập thành công. Dữ liệu đã được lưu vào Google.
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mx-auto login-joinnow">
            <div class="col">
                <div class="login-join">
                    <p>
                        Join Coffee House to earn free food and drinks, get free refills, pay and order with your
                        phone, and more.
                    </p>
                </div>
                <div class="col-lg-4 mx-auto login-btn">
                    <a href="/CoffeeHouse/Join" class="loginjoin-btn">Join now</a>
                </div>
            </div>
        </div>
    </div>
</div>
