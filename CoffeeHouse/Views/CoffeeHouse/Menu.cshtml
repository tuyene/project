@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<Products>
<div class="breadcumb" style="background: url(/images_icon/about_us/breadcumb.jpg);">
    <h2 class="breadcumb-title">Our Menu</h2>
</div>

<div class="menu py-120" style="background-image: url(/images_icon/menu/background/bg.jpeg)">
     <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="text-heading text-center">
                    <span class="text-title-tagline">Our Menu</span>
                    <h2 class="text-title">Let's Check Our Menu</h2>
                </div>
            </div>
        </div>
        <div class="menu-content">
            <div class="row">
                @await Component.InvokeAsync("LoaiSPMenu");
                <div class="row">
                        @foreach(var item in Model)
                        {
                            <div class="col-lg-6">
                            <div class="menu-item">
                                <div class="menu-item-content">
                                    <div class="menu-img">
                                        <img src="~/images_icon/menu/list_menu/mn1.jpg" alt="">
                                    </div>
                       @*              <div class="menu-img set-bg" data-setbg="@Url.Content("../ProductsImages"+@item.Image)"
                                         style="background-image: url(/images_icon/menu/background/bg.jpeg)">
                                        
                                    </div> *@
                                    <div class="menu-info">
                                        <h5>@item.Name</h5>
                                    </div>
                                </div>
                                <div class="menu-price">@item.Price</div>
                            </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            @Html.PagedListPager(Model, page => Url.Action("Menu", new{page = page}))
        </div>
    </div> 
</div>