
@{
    ViewData["Title"] = "Shop_Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcumb" style="background: url(/images_icon/about_us/breadcumb.jpg);">
    <h2 class="breadcumb-title">Shop Cart</h2>
</div>

